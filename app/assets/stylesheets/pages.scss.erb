.navbar {
  position: absolute;

  .logo {
    height: 100px;
    width: auto;
  }
}
#landing {
  height: 100vh;
  background-image: url('banner.jpg');
  background-repeat: no-repeat;
  background-position: top top;
  background-size: cover;
}

#contactanos {
  background-image: url('contactanos.jpg');
  background-repeat: no-repeat;
  background-position: top top;
  background-size: cover;

  .btn-primary {
    font-weight: bold;
    background: rgb(0,0,0);
    background: -webkit-linear-gradient(left, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
    background: -o-linear-gradient(left, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
    background: linear-gradient(to right, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
    border-color: rgba(56,169,53,1);
  }

  input, textarea {
    border-color: rgba(56,169,53,1);
  }

  h4 {
    margin: 0;
  }
}

#footer {
  h4 {
    font-family: 'Myriad Pro Regular';
    font-size: 14px;
    color: white;
    padding: 15px;
    margin: 0;
  }

  background: rgb(0,0,0);
  background: -webkit-linear-gradient(left, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
  background: -o-linear-gradient(left, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
  background: linear-gradient(to right, rgba(0,0,0,1) 0%, rgba(56,169,53,1) 0%, rgba(39,122,52,1) 100%);
}
